        "schedule": [
            "30 8 * * *"
        ],
        "prBodyDefinitions": {
            "Change": "All locks refreshed"
        }
    },
    "schedule": [
        "15 8 * * *"
    ],
    "timezone": "Asia/Shanghai"
}
