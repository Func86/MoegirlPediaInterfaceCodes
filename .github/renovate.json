{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "labels": [
        "dependencies"
    ],
    "commitBodyTable": true,
    "configMigration": true,
    "lockFileMaintenance": {
        "enabled": true,
        "recreateClosed": false,
        "rebaseStalePrs": true,
        "branchTopic": "lock-file-maintenance",
